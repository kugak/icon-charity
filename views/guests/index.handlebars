    <div class="container">
        {{> _msg}}
        {{> _errors}}
        <h1>Guests</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Company</th>
      <th scope="col">Email</th>
      <th scope="col">Receive Email</th>
    </tr>
  </thead>
  <tbody>
    {{#each guests}}
    <tr {{#if receive_email}}class="table-success"{{/if}}>
      <th scope="row">{{moment date "ll"}}<br>
      {{moment date "h:mm:ss a"}}
      </th>
      <td>{{first_name}}</td>
      <td>{{last_name}}</td>
      <td>{{company_name}}</td>
      <td><a href="mailto:{{email}}">{{email}}</a></td>
      <td>{{receive_email}}</td>
    </tr>
    {{else}}
<h3>No Guests Yet!</h3>
{{/each}}
  </tbody>
</table>
    </div>




